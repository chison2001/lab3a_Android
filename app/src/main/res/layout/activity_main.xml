<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/viewTop"
        android:layout_width="412dp"
        android:layout_height="332dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBook"
        android:layout_width="135dp"
        android:layout_height="176dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="@+id/viewTop"
        app:layout_constraintTop_toTopOf="@+id/viewTop"
        app:srcCompat="@drawable/book" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Nguyên hàm tích phân và ứng dụng"
        android:textColor="#020202"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewBook"
        app:layout_constraintTop_toTopOf="@+id/imageViewBook" />

    <TextView
        android:id="@+id/textViewProvided"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cung cấp bởi Tiki Trading"
        android:textColor="#050505"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="141.800 đ"
        android:textColor="#E11101"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewProvided"
        app:layout_constraintTop_toBottomOf="@+id/textViewProvided" />

    <TextView
        android:id="@+id/textViewPriceOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/striking_text"
        android:text="141.800 đ"
        android:textColor="#808080"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPrice1"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice1" />

    <TextView
        android:id="@+id/editTextAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textColor="#040404"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/outline_remove_black_18dp"
        app:drawableRightCompat="@drawable/outline_add_black_18dp"
        app:layout_constraintStart_toStartOf="@+id/textViewPriceOld"
        app:layout_constraintTop_toBottomOf="@+id/textViewPriceOld" />

    <TextView
        android:id="@+id/textViewBuyLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Mua sau"
        android:textColor="#134FEC"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/editTextAmount"
        app:layout_constraintTop_toTopOf="@+id/editTextAmount" />

    <TextView
        android:id="@+id/textViewDiscountCodeSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mã giảm giá đã lưu"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageViewBook"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBook" />

    <TextView
        android:id="@+id/textViewSeeHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Xem tại đây"
        android:textColor="#134FEC"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewDiscountCodeSave"
        app:layout_constraintTop_toTopOf="@+id/textViewDiscountCodeSave" />

    <TextView
        android:id="@+id/textViewDiscountCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/stroke"
        android:text="Mã giảm giá"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/yellow_block"
        app:layout_constraintStart_toStartOf="@+id/textViewDiscountCodeSave"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiscountCodeSave" />

    <Button
        android:id="@+id/buttonInputCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:backgroundTint="#0A5EB7"
        android:text="Nhập mã"
        app:layout_constraintStart_toEndOf="@+id/textViewDiscountCode"
        app:layout_constraintTop_toTopOf="@+id/textViewDiscountCode" />

    <View
        android:id="@+id/viewTopCenter"
        android:layout_width="411dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Bạn có phiếu quà tặng Tiki/Got it/ Urbox?"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/viewTopCenter"
        app:layout_constraintTop_toTopOf="@+id/viewTopCenter" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nhập tại đây?"
        android:textColor="#134FEC"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <View
        android:id="@+id/view5"
        android:layout_width="410dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTopCenter" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Tạm tính"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:text="141.800 đ"
        android:textColor="#EE0D0D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <View
        android:id="@+id/view6"
        android:layout_width="411dp"
        android:layout_height="109dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:text="141.800 đ"
        android:textColor="#EE0D0D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Thành tiền"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

    <Button
        android:id="@+id/button3"
        android:layout_width="375dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:backgroundTint=" #E53935"
        android:text="TIẾN HÀNH ĐẶT HÀNG"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view6" />

</androidx.constraintlayout.widget.ConstraintLayout>